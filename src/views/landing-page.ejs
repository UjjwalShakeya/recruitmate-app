<!-- lastVisit Ejs -->
<% if (locals.lastVisit) { %>
  <div class="last-visit-notification" id="lastVisitBox">
    <div class="last-visit-content">
      <span class="last-visit-icon">⚠️</span>
      <div class="last-visit-text">
        <p class="visit-heading"><strong>Welcome back!</strong></p>
        <p class="visit-sub">Your last visit was <%= new Date(locals.lastVisit).toLocaleString() %></p>
      </div>
    </div>
    <button class="last-visit-close" onclick="document.getElementById('lastVisitBox').style.display = 'none'">✕</button>
  </div>
<% } %>


<!-- Error Alert Box -->
<% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 20;">
  <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Error:</strong> <%= errorMessage %>
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>
<% } %>




